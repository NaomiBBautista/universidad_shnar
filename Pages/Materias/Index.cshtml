@page
@model SHNAR.Pages.Materias.IndexModel

@{
    ViewData["Title"] = "Materias";
}

<h1>Materias</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Materia[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Materia[0].Creditos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Materia[0].MaestroNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Materia[0].InscripcionFecha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Materia) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creditos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaestroNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InscripcionFecha)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
